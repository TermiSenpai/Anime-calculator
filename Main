//CÃ¡lculo del tiempo para ver un anime

#include<iostream>
#include<conio.h>

using namespace std;

int main(){
	int capitulos,horas,dias,tiempo,continuar;

	while(1){
	
	cout<<"\n\n\tintroduzca la cantidad de capitulos de anime para ver: "; 
	cin>>capitulos;
	
	tiempo = (capitulos * 25) / 60;
	dias = tiempo / 24;
	horas = tiempo % 24;

	
		cout<<"\n\tTardaras aproximadamente "<<dias<<" dias y "<<horas<<" horas   "<<endl;
		cout<<"\n\tPulsa enter para continuar, cualquier otra cosa para salir"; 

	continuar = getch(); //obtener la tecla ENTER para continuar
		if(continuar==13){
			system("cls");
	}	
		else{ //en caso de no ser ENTER, cerrar el programa
			break;
			}
	}
return 0;
}
